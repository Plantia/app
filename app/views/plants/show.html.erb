<div class="container">

  <div class="row">
    <div class="u-pull-right">
      <%= link_to "Back", :back %> | <%= link_to 'Edit', edit_plant_path(@plant) %>
    </div>


    <div class="four columns">
      <h1>
        <strong><%= @plant.nickname%></strong>
      </h1>
      <h5>
        <em><%= @plant.common_name%></em>
      </h5>
    </div>
  </div>


  <div class="row">

    <div class="four columns">
    </div>

    <div class="four columns">
      <table class="u-full-width">
        <thead>
          <tr>
            <th>Light Requirements</th>
            <th>Water</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @plant.light%></td>
            <td>Every <%= @plant.water_freq %> days</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="three columns">
      water instances
      <% @plant.water_events.each do |e| %>
      <div><%= e.created_at.strftime("%l:%M %p %b %d %Y") %></div>
      <% end %>
      <br>
    </div>

    <div class= "twelve columns">
<label for="plant-log"><h4><strong>Plant Log</strong></h4></label>
<%= form_for [@plant, @plantlog] do |log| %>
<div class= "four columns">
  <p>
    <%= log.label "Date" %>
    <%= log.date_field :logtime %>

    <%= log.label "Title" %>
    <%= log.text_area :title %>

    <%= log.label "Entry" %>
    <%= log.text_area :logtext %>
  </p>
  <p>
    <%= log.submit 'Create Plantlog' %>
  </p>
<% end %>
</div>
 <h2>Log History </h2>
<% @plant.plantlogs.each do |log| %>
  <p>
    <strong>Date: </strong>
    <%= log.logtime %>
  </p>
  <p>
    <strong>Title: </strong>
    <%= log.title %>
  </p>

  <p>
    <strong>Entry: </strong>
    <%= log.logtext %>
  </p>
<% end %>
        <!-- Old Styling For Plant log -->
        <!--<em><small><textarea class="u-full-width" placeholder= "E.g. 03.04.2015 <%= @plant.nickname%> experienced ideal conditions such as ..." id="exampleMessage"></textarea></em></small> -->


    </div>
  </div>
</div>
