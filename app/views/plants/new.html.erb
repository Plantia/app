<div class="container">

  <header class="page-header">
    <h1>New Plant</h1>
  </header>

  <div>
    <%= link_to 'Back', :plants, class: 'button' %>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
        <%= form_for @plant, url: plants_path do |form| %>

          <% if form.object.errors.any? %>
            <div class="alert alert-danger">
              <strong>The following errors prevented saving:</strong>
              <ul>
                <% form.object.errors.full_messages.each do |error| %>
                  <li><%= error %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= form.label :nickname %>
            <%= form.text_field :nickname, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :common_name %>
            <%= form.text_area :common_name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :light %>
            <%= form.select :light, ['Direct','Indirect', 'Low Light', 'Shady'], class: 'form-control' %>
          </div>

          <div class="form-group" id="water_every">
            <%= form.label 'Water Needs' %>
            Water every <%= form.number_field :water_freq, class: 'form-control', placeholder: "??"  %> days
          </div>

          <%= form.submit 'Create Plant', class: 'btn btn-primary' %>
        <% end %>
    </div>
  </div>

</div>
