<section class="plants-index">

  <header class="page-header">
    <h1>See And Create Plants!</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Plant', new_plant_path, class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default plants">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Plant</th>
          <th>Name</th>
          <th>Light</th>
          <th>Water</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @plants %>
      </tbody>
    </table>

  </div>

</section>