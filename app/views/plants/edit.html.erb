<div class="container">

  <header class="page-header">
    <h1>Editing Plant</h1>
  </header>

  <div>
    <%= button_to 'Back to my plants', [:plants] %>
  </div>
  <div>
    <%= form_for :plant, url: plant_path(@plant), method: :patch do |form| %>

     <% if @plant.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@plant.errors.count, "error") %> prohibited this plant from being saved:
        </h2>
        <ul>
          <% @plant.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <%= form.label :nickname %>
      <%= form.text_field :nickname, class: 'form-control' %>

      <%= form.label :common_name %>
      <%= form.text_area :common_name, class: 'form-control' %>

      <%= form.label :light %>
      <%= form.text_area :light, class: 'form-control' %>

      <%= form.label :water_freq %>
      <%= form.number_field :water_freq, class: 'form-control' %>

      <%= form.submit 'Create Plant', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>