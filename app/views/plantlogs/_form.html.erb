<%= form_for [@plant, @plantlog] do |f| %>
  <div id="date-title">
    <%= f.label "Date" %>
    <%= f.date_field :logtime, :value => Time.current.strftime('%Y-%m-%d') %>

    <%= f.label "Title" %>
    <%= f.text_field :title %>
  </div>
  <div id="logtext-label">
    <%= f.label "Entry" %>
  </div>
    <%= f.text_area :logtext %>
  <div ID="logform-submit">
    <%= f.submit 'Create Plantlog' %>
  </div>
<% end %>