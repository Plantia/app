<section class="plants-new">

  <header class="page-header">
    <h1>New Plant</h1>
  </header>

  <div class="well">
    <%= link_to 'All Plants', [:plants], class: 'btn btn-info' %>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">

<!--Do I need [:plants @plant] ? -->
        <%= form_for [@plant] do |form| %> 

        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :nickname %>
          <%= form.text_field :nickname, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :common_name %>
          <%= form.text_area :common_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :light %>
          <%= form.text_area :light, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :water_freq %>
          <%= form.number_field :water_freq, class: 'form-control' %>
        </div>

        <%= form.submit 'Create Plant', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>
